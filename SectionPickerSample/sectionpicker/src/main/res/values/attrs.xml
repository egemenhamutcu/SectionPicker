<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SectionPicker">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="chosenSize" format="dimension" />
        <attr name="chosenColor" format="color" />
        <attr name="chosenStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="indicatorEnabled" format="boolean" />
    </declare-styleable>
</resources>
